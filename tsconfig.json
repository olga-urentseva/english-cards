  "compilerOptions": {
    "target": "esnext",
    "noImplicitAny": true,
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts", "**/*.tsx", "src/declarations.d.ts"],
  "exclude": ["node_modules"]
}
